route-map only-advertise-connected permit 5
 match source-protocol connected
exit
route-map only-advertise-connected permit 10
 set community no-advertise
exit

{% for vname in vrfs %}
router bgp {{ bgp.as }} vrf {{ vname }}

 address-family ipv4 unicast
  import vrf route-map only-advertise-connected 
 exit-address-family
 !
exit
!
{% endfor %}
